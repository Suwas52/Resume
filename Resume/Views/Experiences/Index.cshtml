@model IEnumerable<Resume.Models.Experience>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.company_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.company_address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.website_link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.frontend_skill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.backend_skill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.info_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.website_link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.frontend_skill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.backend_skill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.info_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.experience_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.experience_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.experience_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
