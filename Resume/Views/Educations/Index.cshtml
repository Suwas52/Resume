@model IEnumerable<Resume.Models.Education>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.school_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.university_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.info_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.school_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.university_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.info_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.education_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.education_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.education_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
